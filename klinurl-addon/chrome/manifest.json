{
    "manifest_version": 2,
    "name": "Chrome Url Shortener",
    "description": "Shorten urls in wichever tab you are in.",
    "version": "1",
    "author": "kpu007, Harriet Akot, Nyior Clement",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "clipboardRead",
        "storage",
        "tabs",
        "https://*/"
    ],
    "background": {
        "scripts": ["js/code/background_apirequest.js"],
        "persistent": false
    },    
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/background.css"
            ],
            "js": [
                "js/code/background.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icons/tab-icon.png",
        "default_title": "shorten your urls",
        "default_popup": "html/popup.html"
    }
}