{ 
    "manifest_version": 2, 
    "name": "klinurl", 
    "description": "Shorten urls in wichever tab you are in.", 
    "version": "1", 
    "author": "Kyle Pulido, Harriet Akot, Nyior Clement", 

    "permissions": [
                        "<all_urls>",
                        "tabs", 
                        "clipboardWrite", 
                        "clipboardRead", 
                        "storage"
                    ],

        "background": [
                        {
                            "scripts": ["js/code/background.js"],
                            "persistent": false
                        }
                    ],    
    
    "content_scripts": [
                            {
                                "matches": ["<all_urls>"],
                                "css": ["css/content.css"],
                                "js": ["js/code/content.js"]
                            }
                        ],

    "browser_action": {   
                        "default_icon": "icons/tab-icon.png",   
                        "default_title": "shorten your urls",
                        "default_popup": "html/popup.html"
                    },
    "web_accessible_resources": [
                        "icons/back.jpg"
                      ]
}
